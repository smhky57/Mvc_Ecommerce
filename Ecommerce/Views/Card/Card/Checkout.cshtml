@model Ecommerce.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>
    .field-validation-error {
        color: #e80c4d;
        font-weight: bold;
    }

    .field-validation-valid {
        display: none;
    }

    input.input-validation-error {
        border: 1px solid #e80c4d;
    }

    .validation-summary-errors {
        color: #e80c4d;
        font-weight: bold;
        font-size: 1.1em;
    }

    .validation-summary-valid {
        display: none;
    }   
        }
</style>
<div class="container">
   
        <div class="row">
            <div class="col-md-12">
                <h2>Sipariş Bilgileriniz</h2>


                <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
                <hr />

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">UserName</label>
                        <div class="col-sm-10">
                            @User.Identity.Name
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Adres Başlığı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Adres</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Adres1, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Semt</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Mahalle</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Posta Kodu</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" />
                        </div>
                    </div>
                }



            </div>
        </div>
     
    

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

