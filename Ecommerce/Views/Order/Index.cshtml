@model IEnumerable<Ecommerce.Models.AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="container pb-5">
    <h2>Siparişler</h2><hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered"><thead>
                <tr>
                    <th>Id</th>
                    <th>Order Number</th>
                    <th>Oder Date</th>
                    <th>Order Status</th>
                                    <th>Count</th>
                    <th>Total</th>
                    <th></th>
                </tr></thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.OrderId</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td>
                        @if (item.OrderState == Ecommerce.Entity.EnumOrderState.Waiting)
                        {
                            <span class="badge badge-danger">Waiting</span>
                        }   else if (item.OrderState == Ecommerce.Entity.EnumOrderState.Completed)
                        {
                            <span class="badge badge-success">Completed</span>
                        }
                    </td>
                    <td>@item.Total.ToString("c")</td>
                    <td>@item.Count</td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { Id = item.OrderId }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
                }
            </tbody>
            </table>
        </div>
    </div>
</div>
