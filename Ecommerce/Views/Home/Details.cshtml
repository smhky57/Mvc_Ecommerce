                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-half" aria-hidden="true"></i>
                    <span class="badge badge-success">57</span>
                </div>
                <div id="write-review" class="col-md-4">
                    Write a review
                </div>
            </div>

            <div class="row mt-1">
                <div class="col-md-12">
                    <h4 id="product-price">$@Model.Price</h4>
                   @using (Html.BeginForm("SepeteEkle","Card"))
                               {
                       @Html.HiddenFor(i=>i.Id)
                        <button type ="submit" class="btn btn-successs">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
