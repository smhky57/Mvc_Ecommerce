@model Ecommerce.Entity.Product
@{
    ViewBag.Title = "Details";
}

<div id="product-details" class="container pb-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Upload/@Model.Image" class="img-fluid w-100 rounded" />
        </div>

        <div class="col-md-6">
            <div class="row mt-1">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>

                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    @if (Model.Stock == null)
                    {
                        <span class="badge badge-danger">Out Of Stock</span>
                    }
                    else
                    {
                    <span class="badge badge-primary">In Stock => @Model.Stock</span>
                    }<span class="product-number">#2566</span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-3">
